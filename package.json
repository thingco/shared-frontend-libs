{
	"name": "shared-frontend-libs",
	"description": "A public collection of frontend libraries to be shared between ThingCo/Theo applications",
	"author": "ThingCo",
	"contributors": [
		{
			"name": "Daniel Couper",
			"email": "daniel.couper@thingco.com"
		}
	],
	"private": true,
	"workspaces": [
		"packages/*",
		"website"
	],
	"scripts": {
		"cm": "cz",
		"global:clean": "rimraf",
		"global:compile": "cd $INIT_CWD && tsc --build",
		"global:concurrently": "cd $INIT_CWD && concurrently",
		"global:format": "prettier",
		"global:lint": "cd $INIT_CWD && eslint",
		"global:test": "jest",
		"global:typecheck": "cd $INIT_CWD && tsc --noEmit"
	},
	"devDependencies": {
		"@commitlint/cli": "^12.0.1",
		"@commitlint/config-conventional": "^12.0.1",
		"@types/concurrently": "^6.0.1",
		"@types/eslint": "^7.2.7",
		"@types/eslint-plugin-prettier": "^3.1.0",
		"@types/prettier": "^2.2.2",
		"@types/rimraf": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^4.17.0",
		"@typescript-eslint/parser": "^4.17.0",
		"commitizen": "^4.2.3",
		"concurrently": "^6.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.21.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-jsdoc": "^32.2.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-react": "^7.22.0",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.5.3",
		"typescript": "^4.2.3"
	},
	"resolutions": {
		"typicode/husky": "4.3.8"
	},
	"husky": {
		"hooks": {
			"prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": "yarn tsc --noEmit",
		"*.{js,json,rjson,jsx,ts,tsx}": "eslint --fix",
		"*.{css,html,js,json,jsx,mjs,rjson,ts,tsx}": "prettier --write"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
