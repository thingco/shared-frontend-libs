{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"emitDeclarationOnly": true,
		"declarationDir": "./lib/types",
		"skipLibCheck": true,
		"rootDir": "./src"
	},
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	},
	"include": ["src/**/*"],
	"exclude": ["src/*.test.{js,ts,tsx}", "src/test-app/**/*"]
}
