{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declarationDir": "./lib/types",
		"emitDeclarationOnly": true,
		"rootDir": "./src",
		"skipLibCheck": true
	},
	"typedocOptions": {
		"defaultCategory": "Core",
		"entryPoints": ["./src/index.ts"],
		"exclude": ["**/*+(index|.spec|.e2e).ts"],
		"excludeInternal": false,
		"hideGenerator": true,
		"out": "docs",
		"readme": "none"
	},
	"exclude": ["src/**/*.test.{js,ts,tsx}"],
	"include": ["src/**/*"]
}
