{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"declarationDir": "./lib/types",
		"emitDeclarationOnly": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"paths": {
			"core/*": ["src/*"]
		}
	},
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"exclude": ["**/*+(index|.spec|.e2e).ts"],
		"excludeInternal": false,
		"hideGenerator": true,
		"out": "docs",
		"readme": "none"
	},
	"exclude": ["src/**/*.test.{js,ts,tsx}"],
	"include": ["src/**/*"]
}
