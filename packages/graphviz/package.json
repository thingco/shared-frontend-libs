{
	"name": "@thingco/graphviz",
	"description": "A small data visualisation library for ThingCo front ends. NOT a renderer, this just takes data and processes it to a form usable by a renderer",
	"version": "0.1.0",
	"main": "lib/index.js",
	"types": "lib/index.d.ts",
	"module": "lib/index.js",
	"public": true,
	"scripts": {
		"build": "yarn clean && yarn bundle",
		"bundle": "yarn rollup -c",
		"clean": "yarn global:clean lib",
		"develop": "yarn clean && yarn bundle --watch",
		"lint": "yarn global:lint"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^17.1.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^11.1.1",
		"@types/rollup-plugin-peer-deps-external": "^2.2.0",
		"rollup": "^2.38.5",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-typescript2": "^0.29.0",
		"typescript": "^4.1.3"
	}
}
