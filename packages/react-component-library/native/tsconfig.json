{
	"extends": "../../../tsconfig.json",
	"compilerOptions": {
		"emitDeclarationOnly": true,
		"declarationDir": "./lib/types",
		"rootDir": "./src",
		"types": ["react", "jest"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true
	},
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.test.{ts,tsx}", "src/__fixtures__/*.{ts, tsx}"]
}
